<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NewEntryFragment"
    >

  <Button
      android:id="@+id/entry_edit_button"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="300dp"
      android:text="@string/modify_entry"
      android:textColor="#FFFFFF"
      android:textAllCaps="false"
      android:background="@drawable/tfc_custom_button"/>

  <Button
      android:id="@+id/manual_entry_button"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="200dp"
      android:text="@string/manual_entry"
      android:textColor="#FFFFFF"
      android:textAllCaps="false"
      android:background="@drawable/tfc_custom_button"/>
  <Button
      android:id="@+id/deliverynote_entry_button"
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="100dp"
      android:text="@string/delivery_note_scan"
      android:textColor="#FFFFFF"
      android:textAllCaps="false"
      android:background="@drawable/tfc_custom_button"/>

</RelativeLayout>