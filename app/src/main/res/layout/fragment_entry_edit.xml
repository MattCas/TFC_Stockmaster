<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EntryEditFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/edit_entry_title"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/edit_entry_retrieve_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="183dp"
        android:layout_marginRight="183dp"
        android:background="@drawable/tfc_custom_button"
        android:text="@string/stock_id_lookup"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edit_entry_stock_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="213dp"
        android:layout_marginLeft="213dp"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Charge Nr" />
</RelativeLayout>