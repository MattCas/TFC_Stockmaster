<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/man_entry_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".fragments.ManualEntryFragment">

    <Button
        android:id="@+id/man_entry_lookup_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="180dp"
        android:background="@drawable/tfc_custom_button"
        android:text="@string/order_id"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/man_entry_order_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="70dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/order_id_hint" />
    <TextView
        android:id="@+id/man_entry_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/man_form_label"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/tfc_font"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/material_label_man_entry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:text="Material" />

    <TextView
        android:id="@+id/specs_label_man_entry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="370dp"
        android:text="@string/specifications"
        />

    <TextView
        android:id="@+id/quantity_label_man_entry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"
        android:text="@string/quantity"
        />

    <TextView
        android:id="@+id/delivery_date_label_man_entry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="260dp"
        android:text="@string/delivery_date" />

    <TextView
        android:id="@+id/man_entry_stock_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="30dp"
        android:text="@string/stock_id" />

    <TextView
        android:id="@+id/extraLabel1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="30dp"
        android:text="Extra1" />

    <TextView
        android:id="@+id/extraLabel2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="280dp"
        android:text="Extra2" />

    <TextView
        android:id="@+id/extraLabel3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="520dp"
        android:text="Extra3" />

    <TextView
        android:id="@+id/extraLabel4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="30dp"
        android:text="Extra4" />

    <TextView
        android:id="@+id/extraLabel5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="280dp"
        android:text="Extra5" />

    <TextView
        android:id="@+id/extraLabel6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="520dp"
        android:text="Extra6" />

    <TextView
        android:id="@+id/notesLabel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="30dp"
        android:text="@string/additional_notes" />

    <Spinner
        android:id="@+id/man_entry_material"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="190dp"
        android:autofillHints=""
        android:ems="10" />

    <EditText
        android:id="@+id/man_entry_spec_declared"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="490dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="@string/enter_specifications" />

    <EditText
        android:id="@+id/man_entry_specs"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="690dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="G/M2" />

    <EditText
        android:id="@+id/man_entry_date_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="490dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:hint="@string/enter_delivery_date" />

    <EditText
        android:id="@+id/man_entry_stockid"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:hint="@string/enter_stock_id" />


    <EditText
        android:id="@+id/man_entry_quantity"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:hint="@string/enter_quantity" />


    <EditText
        android:id="@+id/man_entry_extra1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:hint="Extra1" />

    <EditText
        android:id="@+id/man_entry_extra2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="390dp"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:hint="Extra2" />

    <EditText
        android:id="@+id/man_entry_extra3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="630dp"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:hint="Extra3" />

    <EditText
        android:id="@+id/man_entry_extra4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="510dp"
        android:ems="10"
        android:hint="Extra4" />

    <EditText
        android:id="@+id/man_entry_notes"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="580dp"
        android:ems="10"
        android:hint="@string/enter_notes" />

    <EditText
        android:id="@+id/man_entry_extra5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="390dp"
        android:layout_marginTop="510dp"
        android:ems="10"
        android:hint="Extra5" />

    <EditText
        android:id="@+id/man_entry_extra6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="630dp"
        android:layout_marginTop="510dp"
        android:ems="10"
        android:hint="Extra6" />

    <EditText
        android:id="@+id/man_entry_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="490dp"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:hint="@string/enter_product_name" />

    <TextView
        android:id="@+id/name_label_man_entry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="330dp"
        android:text="@string/product_name" />


    <Button
        android:id="@+id/man_entry_photo_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="1010dp"
        android:background="@drawable/tfc_custom_button"
        android:text="@string/take_photo"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/man_entry_submit_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1010dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:background="@drawable/tfc_custom_button"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/man_img_view"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:visibility="visible" />

</RelativeLayout>